<% provide(:title, I18n.t("competitions.manage_big_comps.title")) %>

<h1><%= I18n.t("competitions.manage_big_comps.title") %></h1>
<% names = { french: I18n.t("competitions.manage_big_comps.french"), euro: I18n.t("competitions.manage_big_comps.euro"), world: I18n.t("competitions.manage_big_comps.world") } %>

<div class="alert alert-info my-3">
  <p>
    <%= I18n.t("competitions.manage_big_comps.p1") %>
  </p>
  <p>
    <b><%= t("competitions.manage_big_comps.comp_index_link_html", calendrier: link_to(I18n.t("competitions.manage_big_comps.calendar"), competitions_path)) %></b>
  </p>
</div>
<%= simple_form_for :big_champs, url: update_champs_path, wrapper: :horizontal_form do |f| %>
  <% @champs.each do |champ| %>
    <h3 class="my-3"><%= names[champ.role.to_sym] %></h3>
    <%= f.simple_fields_for champ.role, champ do |fr| %>
      <%= fr.input :competition_id %>
      <%= fr.input :name %>
      <%= fr.input :alt_text, as: :text %>
    <% end %>
  <% end %>
  <%= f.button :submit %>
<% end %>
